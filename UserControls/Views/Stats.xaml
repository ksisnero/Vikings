    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Strength" VerticalAlignment="Top"/>
        <TextBox Text="3" VerticalAlignment="Center" Grid.Column="1" Padding="8,5,8,5" Margin="2"/>

        <Label Content="Dexerity" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBox Text="3" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Padding="8,5,8,5" Margin="2"/>

        <Label Content="Constitution" VerticalAlignment="Top" Grid.Row="2"/>
        <TextBox Text="3" VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" Padding="8,5,8,5" Margin="2"/>

        <Label Content="Intellegence" VerticalAlignment="Top" Grid.Row="3"/>
        <TextBox Text="3" VerticalAlignment="Center" Grid.Column="1" Grid.Row="3" Padding="8,5,8,5" Margin="2"/>

        <Label Content="Perception" VerticalAlignment="Top" Grid.Row="4"/>
        <TextBox Text="3" VerticalAlignment="Center" Grid.Column="1" Grid.Row="4" Padding="8,5,8,5" Margin="2"/>

        <Label Content="Charisma" VerticalAlignment="Top" Grid.Row="5"/>
        <TextBox Text="3" VerticalAlignment="Center" Grid.Column="1" Grid.Row="5" Padding="8,5,8,5" Margin="2"/>

        <Label Content="Appearance" VerticalAlignment="Top" Grid.Row="6"/>
        <TextBox Text="3" VerticalAlignment="Center" Grid.Column="1" Grid.Row="6" Padding="8,5,8,5" Margin="2"/>
    </Grid>
    
